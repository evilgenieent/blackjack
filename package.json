{
  "name": "blackjack",
  "version": "1.0.0",
  "description": "A blackjack game.",
  "author": "Jonathan Rubins <jonrubins@gmail.com>",
  "scripts": {
    "build": "NODE_ENV=production webpack --progress --config webpack.config.prod.js",
    "clean:deps": "rm -rf node_modules",
    "deploy": "yarn clean:deps && yarn && ./deploy.sh",
    "lint:js": "eslint app postcss.config.js webpack.config.dev.js webpack.config.prod.js --ext=.js,.jsx",
    "lint:sass": "sass-lint -v -q",
    "lint": "yarn lint:js && yarn lint:sass",
    "start": "git pull && yarn && webpack-dev-server --config webpack.config.dev.js",
    "start:merge": "yarn && webpack-dev-server --config webpack.config.dev.js",
    "start:debug": "yarn && DEBUG=true webpack-dev-server --config webpack.config.dev.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "engines": {
    "node": "8.6.0",
    "npm": "5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jrubins/blackjack.git"
  },
  "license": "UNLICENSED",
  "jest": {
    "cacheDirectory": "./.tmp",
    "resetMocks": true,
    "resetModules": true
  },
  "dependencies": {
    "classnames": "2.2.5",
    "core-js": "2.4.1",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.4",
    "normalize.css": "7.0.0",
    "numeral": "2.0.6",
    "react": "15.6.1",
    "react-addons-css-transition-group": "15.6.0",
    "react-dom": "15.6.1",
    "react-redux": "5.0.5",
    "react-router-dom": "4.1.2",
    "redux": "3.7.2",
    "redux-localstorage": "0.4.1",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-loader": "7.1.1",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-transform-es2015-destructuring": "6.23.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "eslint": "4.4.1",
    "eslint-plugin-react": "7.1.0",
    "extract-text-webpack-plugin": "3.0.0",
    "firebase-tools": "3.9.2",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "node-sass": "4.5.3",
    "object-sizeof": "1.1.1",
    "postcss-loader": "1.3.2",
    "pre-commit": "1.2.2",
    "react-addons-perf": "15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-lint": "1.10.2",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "webpack": "3.3.0",
    "webpack-dev-server": "2.5.1",
    "webpack-dotenv-plugin": "2.0.2"
  }
}
